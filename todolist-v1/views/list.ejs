<%- include('header'); -%>

    <div class="box" id="heading">
      <h1><%= kindOfDay %></h1>
    </div>

    <div class="box">
      <% newListItems.forEach(function(item){ %>
        <form action="/delete" method="post" id="completed">

          <div class="item">
            <input type="checkbox" name="deleteItem" value="<%= item._id %>" onchange="this.form.submit()">
            <p> <%= item.name %> </p>
          </div>

        </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Add a task" autocomplete="off">
        <button type="submit" name="addItem">+</button>
      </form>
    </div>


<%- include('footer'); -%>
